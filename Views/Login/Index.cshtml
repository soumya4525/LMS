
@model LMS.Models.UserRegistration
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <style>
        #Login {
            box-shadow: 0px 0px 10px 0px pink;
            background: linear-gradient(to right,#FFFFE0 0%,#FFE1FF 100%);
            margin-top: 30px;
        }

        #table {
            padding: 20px 30px 30px 60px;
        }
    </style>
</head>
<body style="background-color:#FDF5E6">
    <div class="container-fluid">
        <div class="row-justify-content-center">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div id="Login">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        <div id="table">
                            <table>
                                <tr>
                                    <th colspan="2">
                                        <h3 style="color:#FF69B4">Sign In</h3>
                                    </th>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.UserName)
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @autocomplete = "off" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.Password)
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @autocomplete = "off" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <label class="text-danger">@ViewBag.LoginErrorMessage</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="submit" name="name" value="Login" class="btn btn-success" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a href="@Url.Action("create", "UserRegistrations")" style="color:#FF69B4">Register Here</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/scripts/bootstrap.min.js"></script>
</body>
</html>

